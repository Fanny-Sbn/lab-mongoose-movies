<h2>Create a celebrity</h2>

<form action="/celebrities/new"
      method="post">

    <label for="name">Name</label>
    <input type="text"
           name="name">
    <br>

    <label for="occupation">Occupation</label>
    <input type="text"
           name="occupation">
    <br>

    <label for="catchPhrase">Catch Phrase</label>
    <input type="text"
           name="catchPhrase">
    <br>

    <button type="submit">POST</button>

</form>